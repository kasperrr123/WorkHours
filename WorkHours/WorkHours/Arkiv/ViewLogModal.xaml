<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkHours.Arkiv.ViewLogModal">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
            <StackLayout HorizontalOptions="Center">
                <Label Text="Oprettet: " FontSize="Medium" HorizontalOptions="CenterAndExpand" />
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="{Binding Oprettet}" HorizontalOptions="Center" FontSize="Medium" FontAttributes="Bold" />
            </StackLayout>
            <StackLayout HorizontalOptions="Center">
                <Label Text="Arbejdes timer: " FontSize="Medium" HorizontalOptions="CenterAndExpand" />
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <TimePicker Time="{Binding Fra}"  />
                <Label Text=" - " FontSize="Medium" FontAttributes="Bold" />
                <TimePicker Time="{Binding Til}"  />
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Button Text="Ændre"></Button>
                <Button Text="Slet"></Button>
            </StackLayout>
            <Button x:Name="dismissButton" Text="Gå tilbage" Clicked="OnDismissButtonClicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>