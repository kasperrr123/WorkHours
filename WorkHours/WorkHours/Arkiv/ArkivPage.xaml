<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkHours.Arkiv.ArkivPage" Title="Arkiv">
    <ContentPage.Content>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>

            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <StackLayout Grid.Row="0" Grid.RowSpan="1">
                <Picker x:Name="Picker" ItemsSource="{Binding Perioder}" SelectedIndexChanged="Picker_SelectedIndexChanged" Title="Skift periode"></Picker>
            </StackLayout>
            <StackLayout Grid.Row="1" Grid.RowSpan="8">
                <ScrollView>
                    <ListView x:Name="ListViewRecords" SeparatorColor="Black"  ItemsSource="{Binding ListOfRecords}" ItemSelected="ListView_ItemSelected"  HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <StackLayout BackgroundColor="LightBlue"
                        Orientation="Vertical">
                                        <StackLayout Orientation="Horizontal" BackgroundColor="LightBlue" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                                            <Label Text="{Binding Date.DayOfWeek}" TextColor="Black"></Label>
                                            <Label Text="{Binding Date}" TextColor="Black"></Label>
                                        </StackLayout>
                                    </StackLayout>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </ScrollView>
            </StackLayout>

            <StackLayout Grid.Row="8" Grid.RowSpan="1" HorizontalOptions="CenterAndExpand" >
                <Frame HasShadow="True" OutlineColor="CadetBlue" Margin="0,0,0,10">
                    <StackLayout Orientation="Horizontal" VerticalOptions="Center">
                        <Label Text="Pause: "></Label>
                        <Label Text="{Binding TotalPause}"></Label>
                        <Label Text="Timer: "></Label>
                        <Label Text="{Binding TotalTimer}"></Label>
                    </StackLayout>

                </Frame>
            </StackLayout>

        </Grid>
    </ContentPage.Content>
</ContentPage>