<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkHours.Arkiv.ArkivPage" Title="Arkiv">
    <ContentPage.Content>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>

            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <StackLayout Grid.Row="0" Grid.RowSpan="8">
                <ScrollView>
                    <ListView SeparatorColor="Black" ItemsSource="{Binding ListOfRecords}"  ItemSelected="ListView_ItemSelected"  HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                        
                    </ListView>
                </ScrollView>
            </StackLayout>
            <StackLayout Grid.Row="8" Grid.RowSpan="2" Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                <Button Text="Anden måned" BackgroundColor="CadetBlue" BorderRadius="8" HorizontalOptions="FillAndExpand" VerticalOptions="EndAndExpand"></Button>
            </StackLayout>

        </Grid>
    </ContentPage.Content>
</ContentPage>