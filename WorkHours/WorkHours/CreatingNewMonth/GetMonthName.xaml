<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Name="Carousel" xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkHours.CreatingNewMonth.GetMonthName">
 
        <StackLayout VerticalOptions="CenterAndExpand">
            <Label HorizontalTextAlignment="Center">Hvilken måned?</Label>
            <Picker ItemsSource="{Binding Months}" SelectedIndex="{Binding TodaysDate}" x:Name="picker"></Picker>
            <Button Text="Næste" HorizontalOptions="CenterAndExpand" Clicked="Button_Clicked"></Button>
        </StackLayout>
 



</ContentPage>
    
    