<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Name="Carousel" xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkHours.HomePageFolder.Settings">

    <StackLayout>
        <StackLayout>
            <Label Text="Opret ny" HorizontalTextAlignment="Center" TextColor="CadetBlue"></Label>
            <Button x:Name="OpretNyArbejdspladsBtn" Clicked="OpretNyArbejdspladsBtn_Clicked" Text="Opret ny arbejdsplads" ></Button>
        </StackLayout>
        <StackLayout>
            <Label Text="Ændre arbejdsplads" HorizontalTextAlignment="Center" TextColor="CadetBlue"></Label>
            <Label Text="Vælge en arbejdsplads du vil ændre i" HorizontalTextAlignment="Start"></Label>
            <Picker x:Name="WorkPlacePicker" ItemsSource="{Binding ArbejdsPladser}"></Picker>
            <Button x:Name="ÆndreArbejdspladsBtn" Clicked="ÆndreArbejdspladsBtn_Clicked" Text="Ændre i arbejdsplads" ></Button>
        </StackLayout>
        <StackLayout>
            <Label Text="Advanceret indstillinger" HorizontalTextAlignment="Center" TextColor="IndianRed"></Label>
            <Button x:Name="DeleteUserAndDatabaseBtn" BackgroundColor="Red" TextColor="Black" Clicked="ResetAppBtn_Clicked" Text="Reset app"></Button>
        </StackLayout>

       

    </StackLayout>




</ContentPage>
    
    